.matrix {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    overflow-y: auto;
    background-image: url(../images/matrix.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-color: gray;
    z-index: -1;
   	text-align: center;
}

.matrix-layout {
   	width: 929px;
   	height: 400px;
}

.comp {
    position: relative;
    width: 128px;
    height: 128px;
    background-color: blue;
    float: left;
    margin: 5px;
    display: none;
}

.comp:hover{
    text-decoration: none;
    cursor: pointer;
    width: 130px;
    height: 130px;
    margin: 4px;
}

.comp .epm-icon {
   	font-size: 54px;
    color: white;
    overflow: hidden;
    position: absolute;
    left: 38px;
    top: 27px;
}

.innerText {
	position: absolute;
	width: 126px;
    bottom: 3px;
    left: 0px;
    font-size: 10pt;
	text-align: center;
    color: #fff;
	overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-family: "Microsoft Yahei UI","Microsoft Yahei","寰蒋闆呴粦",SimSun,"瀹嬩綋", sans-serif;
}

.pagi {
	position: absolute;
    height: 39px;
    width: 250px;
    right: 42px;
    bottom: 49px;
}

.prev {
	background-image: url(../images/hpc14.png);
    background-repeat: no-repeat;
    background-position: -193px -52px;
    width: 32px;
    height: 34px;
    float: left;
    opacity: 0.7;
    margin: 0 32px;
}

.prev:hover,.next:hover {
    cursor: pointer;
}

.next {
	background-image: url(../images/hpc14.png);
    background-repeat: no-repeat;
    background-position: -161px -52px;
    width: 32px;
    height: 34px;
    opacity: 0.7;
    float: left;
}

.authority {
    position: absolute;
    bottom: 0;
    padding-right: 20px;
    right: 0;
    height: 48px;
    left: 0;
    text-align: right;
    color: white;
	background: linear-gradient(0deg, rgba(0,0,0,.7), rgba(0, 0, 0,0));
}

.authority a {
	color: red;
}

.authority span {
	line-height: 31px;
    text-shadow: 2px 2px 2px #000, 0px 0px 10px #fff, 0px 0px 20px #fff;
}

.epm-frame-account .overview {
	height: 56px;
	cursor: pointer
}

.epm-frame-account .overview span.username {
	float: left;
	margin-left: 12px;
	line-height: 56px;
	color: white;
}

.epm-frame-account .overview img.icon-thumbnail
	{
	float: left;
	margin: 10.5px;
	height: 35px;
	width: 35px;
	border-radius: 50%
}

.epm-frame-account .panel {
	width: 256px;
	margin-right: 4px
}

.epm-frame-account .panel>* {
	width: 100%
}

.epm-frame-account .panel>.info {
	margin: 24px 0;
	padding: 0 12px
}

.epm-frame-account .panel>.info img.icon {
	height: 84px;
	width: 84px;
	margin: 0 74px;
	border-radius: 50%;
	box-shadow: 0 1px 5px rgba(0, 0, 0, .2)
}

.epm-frame-account .panel>.info div {
	text-align: center
}

.epm-frame-account .panel>.info div.username {
	padding-top: 12px;
	color: #000;
	font-size: 18px
}

.epm-frame-account .panel>.info div.email {
	color: #888
}

.epm-frame-account .panel>ul {
	margin: 0;
	padding: 0
}

.epm-frame-account .panel>ul li.divider {
	height: 1px;
	margin: 1px 8px;
	overflow: hidden;
	background-color: #e5e5e5
}

.epm-frame-account .panel>ul li.divider>* {
	display: none
}

.epm-frame-account .panel>ul li a {
	padding: 8px 24px
}

.epm-frame-account .panel>ul a {
	color: #333;
	display: block;
	font-weight: 400;
	letter-spacing: .1px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	text-decoration: none;
	transition: background-color .3s cubic-bezier(0, 0, .2, 1), color .3s
		cubic-bezier(0, 0, .2, 1)
}

.epm-frame-account .panel>ul a.active,
	#epm-frame-header-wrapper .epm-frame-account .panel>ul a:focus,
	#epm-frame-header-wrapper .epm-frame-account .panel>ul a:hover {
	background-color: #e0e0e0
}

.epm-frame-account:hover .overview img.icon-thumbnail
	{
	box-shadow: 0 1px 5px rgba(0, 0, 0, .2)
}

.systool {
	float: right;
	height: 56px;
	margin-right: 15px;
}

.systool:hover .username {
	text-decoration: underline;
}

.systool .userImg {
	color: #B8B859;
    font-size: 30px;
    margin: 10px;
}

.systool>span {
	line-height: 56px
}

.systool .epm-frame-log-out:hover {
	cursor: pointer;
}

.extend-box {
	position: absolute;
	top: 56px;
	right: 0;
	overflow: hidden;
	background-color: #fff;
	border: 1px solid #ccc;
	border-color: rgba(0, 0, 0, .2);
	box-shadow: 0 2px 10px rgba(0, 0, 0, .2);
	display: none
}
