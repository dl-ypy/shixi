	function searchItem(){
		monthId = jQuery("#monthId").val();
		table();
	}
	jQuery(document).ready(function(){
    	monthId = jQuery("#monthId").val();
    	jQuery("#monthId").jeDate({
       	   format:"YYYY-MM"
        });
    	searchItem();
    });
</script>
