<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="s" uri="/struts-tags" %>
<%
response.setHeader("Pragma","No-cache"); 
response.setHeader("Cache-Control","no-cache");
%>
<%String contextPath = request.getContextPath();%>
<script type="text/javascript">
jQuery(document).ready(function(){
	var pieData = ${pieData};
	console.log(pieData);
	setChart(pieData);
});
function setChart(dataList) {
	//饼图数据处理
	var title = '';
	var legendData = ['现金','转账','银行POS','代理商资金归集','第三方代收费',
		'MISPOS','沃受理','微信','支付宝','一点结算'];
	var pieData = [];
	for (var i = 0; i < dataList.length; i++) {
		title = dataList[i].LEVEL_NAME;
		pieData.push(
				{value:dataList[i].KPI_01, name:legendData[0]},
				{value:dataList[i].KPI_02, name:legendData[1]},
				{value:dataList[i].KPI_03, name:legendData[2]},
				{value:dataList[i].KPI_04, name:legendData[3]},
				{value:dataList[i].KPI_05, name:legendData[4]},
				{value:dataList[i].KPI_06, name:legendData[5]},
				{value:dataList[i].KPI_07, name:legendData[6]},
				{value:dataList[i].KPI_08, name:legendData[7]},
				{value:dataList[i].KPI_09, name:legendData[8]},
				{value:dataList[i].KPI_10, name:legendData[9]})
	}
    // 基于准备好的dom，初始化echarts实例
    var pieChart = echarts.init(document.getElementById("chart-pie"));
    // 指定图表的配置项和数据
	var option = {
	    title : {
	        text: title+' 现金流入渠道分析',
	        //subtext: '纯属虚构',
	        x:'center',
	        textStyle :{
	        	fontSize :14
	        },
	        top:10,
	    },
	    color:['#3B65AE','#D36E2A','#929292','#E3AA00','#5089BD',
	    	'#63993E','#90A2D4','#F1A88B','#BFBFBF','#FFD185'],
	    tooltip : {
	        trigger: 'item',
	        formatter: "{a} <br/>{b} : {c} ({d}%)"
	    },
	    legend: {
	        orient: 'vertical',
	        left: 'right',
	        data: legendData,
	        top:100
	    },
	    series : [
	        {
	            name: '现金流入渠道分析',
	            type: 'pie',
	            radius : '55%',
	            center: ['45%', '60%'],
	            data:pieData,
	            itemStyle: {
	                emphasis: {
	                    shadowBlur: 10,
	                    shadowOffsetX: 0,
	                    shadowColor: 'rgba(0, 0, 0, 0.5)'
	                }
	            }
	        }
	    ]
	};
    // 使用刚指定的配置项和数据显示图表。
	pieChart.setOption(option);
}
</script>
<div style="width:100%; overflow: auto;">
	<div id="chart-pie" style="width:100%; height: 400px;"></div>
</div>
