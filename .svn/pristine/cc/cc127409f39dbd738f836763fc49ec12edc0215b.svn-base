@navbar-hight: 56px;
@sidebar-width: 192px;

.container {
  width: auto;
  margin: 0;
}

.border {
  position: relative;
  padding: 35px 15px 15px 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
  overflow: hidden;
  word-wrap: break-word;
}
.border (@title) {
  .border;
  &:after {
    background-color: #F5F5F5;
    border: 1px solid #DDDDDD;
    border-radius: 4px 0 4px 0;
    color: #9DA0A4;
    content: @title;
    font-size: 12px;
    font-weight: bold;
    left: -1px;
    padding: 3px 7px;
    position: absolute;
    top: -1px;
  }
}

